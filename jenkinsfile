pipeline {
    agent any
    tools {
       terraform 'terraform'
    }
    
    parameters {
        string(name: 'environment', defaultValue: 'terraform', description: 'Workspace/environment file to use for deployment')
        booleanParam(name: 'destroy-build', defaultValue: false, description: 'Destroy Terraform build?')
    }    
	
	environment {
        AWS_ACCESS_KEY_ID     = credentials('AWS_ACCESS_KEY_ID')
        AWS_SECRET_ACCESS_KEY = credentials('AWS_SECRET_ACCESS_KEY')
    }
	
    stages {
        stage('Git checkout for S3 bucket') {
        when {
                not {
                    equals expected: true, actual: params.destroy-build
                }
        }
           steps{
                git branch: 'main', credentialsId: 'Github', url: 'https://github.com/maatros/docker/global/s3'
            }
        }
        stage('Terraform format check for S3 bucket') {
        when {
                not {
                    equals expected: true, actual: params.destroy-build
                }
        }
            steps{
                sh 'terraform fmt'
            }
        }
        stage('Terraform Init for S3 bucket') {
        when {
                not {
                    equals expected: true, actual: params.destroy-build
                }
        }
            steps{
                sh 'terraform init'
            }
        }
       stage('Git checkout for Docker') {
        when {
                not {
                    equals expected: true, actual: params.destroy-build
                }
        }
           steps{
                git branch: 'main', credentialsId: 'Github', url: 'https://github.com/maatros/docker'
            }
        }
        stage('Terraform Init for Docker') {
        when {
                not {
                    equals expected: true, actual: params.destroy-build
                }
        }
            steps{
                sh 'terraform init'
            }
        }
        stage('Terraform Plan for Docker') {
        when {
                not {
                    equals expected: true, actual: params.destroy-build
                }
        }
            steps{
                sh 'terraform plan -var app_count=3'
            }
        }
        stage('Terraform Apply') {
        when {
                not {
                    equals expected: true, actual: params.destroy-build
                }
        }
            steps{
                sh 'terraform apply --auto-approve'
            }
        }
        stage('Terraform Destroy') {
            when {
                equals expected: true, actual: params.destroy-build
            }
            steps{
                sh 'terraform destroy --auto-approve'
            }
        }
    }

    
}